<div class="logout-container" style="display: flex; justify-content: flex-end; gap: 10px; margin: 10px 20px 20px 20px;">

  <%= link_to "See All College Notifications", notifications_path, 
      style: "
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
      ",
      onmouseover: "this.style.backgroundColor='#0056b3'; this.style.transform='scale(1.05)';",
      onmouseout: "this.style.backgroundColor='#007bff'; this.style.transform='scale(1)';" %>

  <%= button_to "Logout", logout_path, method: :delete, class: "btn-logout" %>

</div>
<h1 class="page-title">All Applications</h1>

<div class="table-container">
  <table class="applications-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Course</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @applications.each do |app| %>
        <tr>
          <td data-label="ID"><%= app.id %></td>
          <td data-label="Name"><%= app.name %></td>
          <td data-label="Phone"><%= app.phone_number %></td>
          <td data-label="Course"><%= app.course.name %></td>
          <td data-label="Status">
            <span class="status-badge <%= app.status %>">
              <%= app.status.capitalize %>
            </span>
          </td>
          <td data-label="Actions">
            <% if app.status == "pending" %>
              <%= button_to "Approve", approve_application_path(app), method: :patch, class: "btn-approve" %>
              <%= button_to "Reject", reject_application_path(app), method: :patch, data: { confirm: "Are you sure?" }, class: "btn-reject" %>
            <% else %>
              <%= button_to "Delete", application_path(app), method: :delete, data: { confirm: "Are you sure you want to delete this application?" }, class: "btn-delete" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div style="text-align: center; margin: 20px 0;">
  <%= link_to "See All Students", students_path, 
      style: "
        display: inline-block;
        padding: 10px 25px;
        background: linear-gradient(45deg, #6c757d, #5a6268);
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
      ",
      onmouseover: "this.style.background='linear-gradient(45deg, #5a6268, #495057)'; this.style.transform='translateY(-2px)';",
      onmouseout: "this.style.background='linear-gradient(45deg, #6c757d, #5a6268)'; this.style.transform='translateY(0)';" %>
</div>



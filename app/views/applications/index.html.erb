<div class="logout-container" style="display: flex; justify-content: flex-end; gap: 10px; margin: 10px 20px 20px 20px;">
  <%= link_to "See All College Notifications", notifications_path, 
      style: "
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
      ",
      onmouseover: "this.style.backgroundColor='#0056b3'; this.style.transform='scale(1.05)';",
      onmouseout: "this.style.backgroundColor='#007bff'; this.style.transform='scale(1)';" %>

  <%= button_to "Logout", logout_path, method: :delete, class: "btn-logout" %>
</div>

<h1 class="page-title">All Applications</h1>

<div class="table-container">
  <table class="applications-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Application Number</th> 
        <th>Name</th>
        <th>Phone</th>
        <th>Course</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @applications.each do |app| %>
        <tr>
          <td data-label="ID"><%= app.id %></td>
          <td data-label="Application Number">
            <%= app.application_number.present? ? app.application_number : "Not Found" %>
          </td>
          <td data-label="Name"><%= app.name %></td>
          <td data-label="Phone"><%= app.phone_number %></td>
          <td data-label="Course"><%= app.course.name %></td>
          <td data-label="Status">
            <span class="status-badge <%= app.status %>">
              <%= app.status.capitalize %>
            </span>
          </td>
          <td data-label="Actions">
            <% if app.status == "pending" %>
              <%= button_to "Approve", approve_application_path(app), method: :patch, class: "btn-approve" %>
              <%= button_to "Reject", reject_application_path(app), method: :patch, data: { confirm: "Are you sure?" }, class: "btn-reject" %>
            <% else %>
              <%= button_to "Delete", application_path(app), method: :delete, data: { confirm: "Are you sure you want to delete this application?" }, class: "btn-delete" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div style="text-align: center; margin: 20px 0;">
  <%= link_to "See All Students", students_path, 
      style: "
        display: inline-block;
        padding: 10px 25px;
        background: linear-gradient(45deg, #6c757d, #5a6268);
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: all 0.2s ease;
      ",
      onmouseover: "this.style.background='linear-gradient(45deg, #5a6268, #495057)'; this.style.transform='translateY(-2px)';",
      onmouseout: "this.style.background='linear-gradient(45deg, #6c757d, #5a6268)'; this.style.transform='translateY(0)';" %>
</div>

<style>
  .logout-container { text-align: right; margin: 10px 20px 20px 20px; }
  .btn-logout { padding: 10px 20px; background-color: #dc3545; color: #fff; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; transition: all 0.3s ease; }
  .btn-logout:hover { background-color: #c82333; transform: scale(1.05); }

  .page-title { text-align: center; margin-bottom: 20px; color: #333; font-family: Arial, sans-serif; }

  .table-container { width: 100%; overflow-x: auto; margin-bottom: 40px; }
  .applications-table { width: 100%; border-collapse: collapse; font-family: Arial, sans-serif; }
  .applications-table thead { background: linear-gradient(to right, #4e73df, #1cc88a); color: #fff; }
  .applications-table th, .applications-table td { padding: 12px 15px; border-bottom: 1px solid #ddd; text-align: left; }
  .applications-table tbody tr:hover { background-color: #f1f1f1; transition: 0.3s; }

  .status-badge { padding: 4px 8px; border-radius: 5px; color: #fff; font-weight: bold; }
  .status-badge.approved { background-color: #28a745; }
  .status-badge.pending { background-color: #ffc107; color: #000; }
  .status-badge.rejected { background-color: #dc3545; }


<% if @application %>
  <div style="max-width: 750px; margin: 50px auto; font-family: 'Arial', sans-serif; display: flex; flex-direction: column; gap: 30px;">

    <div style="background: #ffffff; padding: 30px 35px; border-radius: 25px; box-shadow: 0 12px 28px rgba(0,0,0,0.12); transition: all 0.3s ease; border-top: 5px solid #ff7f50;">
      <h2 style="font-size: 28px; color: #ff7f50; margin-bottom: 25px; letter-spacing: 1px;">ðŸ“„ Application Status</h2>
      
      <p style="margin-bottom: 18px; font-size: 17px; color: #333;">
        <strong>Name:</strong> <%= @application.name %>
      </p>
      <p style="margin-bottom: 18px; font-size: 17px; color: #333;">
        <strong>Status:</strong>
        <span style="color: <%= @application.status == 'approved' ? '#28a745' : '#dc3545' %>;">
          <%= @application.status.capitalize %>
        </span>
      </p>
    </div>

    <% if @application.status == "approved" %>
   
      <div style="background: #ffffff; padding: 30px 35px; border-radius: 25px; box-shadow: 0 12px 28px rgba(0,0,0,0.12); border-left: 8px solid #28a745; transition: all 0.3s ease;">
        <h2 style="font-size: 26px; color: #28a745; margin-bottom: 25px; letter-spacing: 1px;">âœ… Approved Details</h2>
        
        <p style="margin-bottom: 16px; font-size: 17px; color: #333;">
          <strong>Course:</strong> <%= @application.course.name %>
        </p>

        <% if @application.course.subject.present? %>
          <p style="margin-bottom: 16px; font-size: 17px; color: #333;">
            <strong>Subjects:</strong> <%= @application.course.subject %>
          </p>
        <% end %>

        <% if @student %>
          <p style="margin-bottom: 16px; font-size: 17px; color: #333;">
            <strong>Student ID:</strong> <%= @student.student_number %>
          </p>
        <% end %>

        <% if @admission %>
          <p style="margin-bottom: 0; font-size: 17px; color: #333;">
            <strong>Admission Number:</strong> <%= @admission.admission_number %>
          </p>
        <% end %>
      </div>
    <% end %>

 
    <div style="text-align: center; margin-top: 15px;">
      <% path = current_user ? index_path : root_path %>
      <%= link_to "â¬… Back to Home Page", path,
            style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
            onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
            onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
    </div>

  </div>
<% else %>
  <p style="text-align: center; font-size: 16px; color: #856404;">Application not found.</p>
<% end %>

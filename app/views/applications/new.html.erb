<div style="min-height: 100vh; display: flex; justify-content: center; align-items: center;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); padding: 20px;">

  <div style="width: 100%; max-width: 500px; background: #ffffff; border-radius: 15px;
              padding: 30px 25px; box-shadow: 0 8px 25px rgba(0,0,0,0.12); transition: all 0.3s ease;">

    <h1 style="font-family: Arial, sans-serif; color: #343a40; text-align: center; 
               margin-bottom: 25px; text-shadow: 1px 1px #ccc; font-size: 22px;">
      New Application
    </h1>

    <%= form_with(model: @application, local: true) do |form| %>

      <% if @application.errors.any? %>
        <div style="color: red; margin-bottom: 20px;">
          <h2 style="font-size: 16px; margin-bottom: 10px;">
            <%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:
          </h2>
          <ul style="margin: 0; padding-left: 20px;">
            <% @application.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 15px;">
        <%= form.label :name, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.text_field :name, placeholder: "Enter Name",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; outline: none; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= form.label :phone_number, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.telephone_field :phone_number, placeholder: "Enter Phone Number",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; outline: none; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= form.label :dob, "Date of Birth", style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.date_field :dob,
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; outline: none; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= form.label :course_id, "Select Course", style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.collection_select :course_id, @courses, :id, :name, { prompt: "Choose a course" }, 
              { style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; outline: none;" } %>
      </div>

      <div style="text-align: center; margin-bottom: 15px;">
        <%= form.submit "Create Application", 
              style: "width: 100%; padding: 12px; background: linear-gradient(to right, #28a745, #218838); color: #fff; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; font-size: 15px; transition: all 0.3s ease;",
              onmouseover: "this.style.background='linear-gradient(to right, #218838, #1e7e34)'; this.style.transform='scale(1.03)';",
              onmouseout: "this.style.background='linear-gradient(to right, #28a745, #218838)'; this.style.transform='scale(1)';" %>
      </div>

    <% end %>

    <div style="text-align: center; margin-top: 15px;">
      <%= link_to "â¬… Back to Home Page", index_path,
            style: "display: inline-block; padding: 10px 18px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
            onmouseover: "this.style.backgroundColor='#0056b3'; this.style.transform='scale(1.03)';",
            onmouseout: "this.style.backgroundColor='#007bff'; this.style.transform='scale(1)';" %>
    </div>

  </div>
</div>

<div style="min-height: 100vh; display: flex; justify-content: center; align-items: center;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); padding: 20px;">

  <div style="width: 100%; max-width: 400px; background: #ffffff; border-radius: 15px;
              padding: 30px 25px; box-shadow: 0 8px 25px rgba(0,0,0,0.12); transition: all 0.3s ease;">

    <h1 style="font-family: Arial, sans-serif; color: #343a40; text-align: center; 
               margin-bottom: 25px; text-shadow: 1px 1px #ccc; font-size: 22px;">
     Admin Login
    </h1>

    <%= form_with url: login_path, local: true do |form| %>

      <div style="margin-bottom: 18px;">
        <%= form.label :name, "Username", style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.text_field :name, required: true, placeholder: "Enter Username",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= form.label :password, "Password", style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= form.password_field :password, required: true, placeholder: "Enter Password",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box;" %>
      </div>

      <div style="text-align: center; margin-bottom: 18px;">
        <%= form.submit "Login", 
              style: "width: 100%; padding: 12px; background: linear-gradient(to right, #007bff, #0056b3); color: #fff; border: none; border-radius: 10px; font-weight: bold; cursor: pointer; font-size: 15px; transition: all 0.3s ease;",
              onmouseover: "this.style.background='linear-gradient(to right, #0056b3, #003f7f)'; this.style.transform='scale(1.03)';",
              onmouseout: "this.style.background='linear-gradient(to right, #007bff, #0056b3)'; this.style.transform='scale(1)';" %>
      </div>

    <% end %>

    <div style="text-align: center; margin-top: 15px;">
      <%= link_to "â¬… Back to Home Page", root_path,
            style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
            onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
            onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
    </div>

  </div>
</div>

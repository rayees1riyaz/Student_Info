<h1 style="text-align: center; color: #34495e; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin-bottom: 50px; text-shadow: 1px 1px 2px #bdc3c7;">Student Result</h1>

<% if @result.present? %>
  <div style="max-width: 750px; margin: 0 auto; padding: 35px; border-radius: 20px; background-color: #f8f9fa; box-shadow: 0 12px 25px rgba(0,0,0,0.12); border: 1px solid #e0e0e0;">
    
    <!-- Student Info -->
    <div style="margin-bottom: 30px; padding: 20px; background-color: #ffffff; border-radius: 15px; box-shadow: inset 0 2px 5px rgba(0,0,0,0.05);">
      <p style="font-size: 18px; margin: 8px 0;"><strong>Student Id:</strong> <span style="color: #2c3e50;"><%= @result.student.student_number %></span></p>
      <p style="font-size: 18px; margin: 8px 0;"><strong>Student Name:</strong> <span style="color: #2c3e50;"><%= @result.student.name %></span></p>
      <p style="font-size: 18px; margin: 8px 0;"><strong>Phone Number:</strong> <span style="color: #2c3e50;"><%= @result.student.phone_number %></span></p>
      <p style="font-size: 18px; margin: 8px 0;"><strong>Date of Birth:</strong> <span style="color: #2c3e50;"><%= @result.student.dob %></span></p>
    </div>

    <!-- Semester Results -->
    <h2 style="color: #2c3e50; margin-bottom: 20px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; border-bottom: 2px solid #2c3e50; padding-bottom: 5px;">All Semester Results</h2>
    
    <ul style="list-style: none; padding-left: 0; margin-top: 15px;">
      <% @results.each_with_index do |r, index| %>
        <% colors = ['#3498db', '#2ecc71', '#e67e22', '#9b59b6', '#1abc9c', '#e91e63'] %>
        <% color = colors[index % colors.length] %>
        <li style="padding: 16px 20px; margin-bottom: 12px; border-radius: 12px; background-color: <%= color %>; display: flex; justify-content: space-between; align-items: center; box-shadow: 0 4px 10px rgba(0,0,0,0.1); transition: all 0.3s; cursor: pointer;"
            onmouseover="this.style.transform='scale(1.03)'; this.style.boxShadow='0 8px 20px rgba(0,0,0,0.15)';"
            onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 4px 10px rgba(0,0,0,0.1)';">
          <strong style="color: #fff; font-size: 17px;"><%= r.semesters %>:</strong>
          <span style="color: #fff; font-weight: bold; font-size: 16px; background-color: rgba(0,0,0,0.2); padding: 5px 12px; border-radius: 8px;"><%= r.marks %></span>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <p style="text-align: center; color: #e74c3c; font-weight: bold; font-size: 22px; margin-top: 50px;">No result found.</p>
<% end %>

<!-- Back Button -->
<div style="text-align: center; margin-top: 15px;">
  <% path = current_user ? index_path : root_path %>
  <%= link_to "â¬… Back to Home Page", path,
        style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
        onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
        onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
</div>

  </div>
</div>

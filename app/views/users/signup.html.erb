<div style="min-height: 100vh; display: flex; justify-content: center; align-items: center;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); padding: 20px;">

  <div style="width: 100%; max-width: 450px; background: #ffffff; border-radius: 15px;
              padding: 30px 25px; box-shadow: 0 8px 25px rgba(0,0,0,0.12); transition: all 0.3s ease;">

    <h2 style="font-family: Arial, sans-serif; color: #343a40; text-align: center; 
               margin-bottom: 25px; text-shadow: 1px 1px #ccc; font-size: 22px;">
      Student Signup
    </h2>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>

      <% if @user.errors.any? %>
        <div style="color: #d9534f; margin-bottom: 20px; font-size: 14px;">
          <ul style="margin: 0; padding-left: 20px;">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 15px;">
        <%= f.label :name, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= f.text_field :name, placeholder: "Enter Name",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box; transition: all 0.2s;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= f.label :email, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= f.email_field :email, placeholder: "Enter Email",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box; transition: all 0.2s;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= f.label :dob, "Date of Birth", style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= f.date_select :dob, start_year: 1970, end_year: Time.current.year,
              style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 10px; box-sizing: border-box;" %>
      </div>


      <div style="margin-bottom: 15px;">
        <%= f.label :password, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= f.password_field :password, placeholder: "Enter Password",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box; transition: all 0.2s;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= f.label :password_confirmation, style: "font-weight: 600; display: block; margin-bottom: 6px; color: #495057;" %>
        <%= f.password_field :password_confirmation, placeholder: "Confirm Password",
              style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 14px; outline: none; box-sizing: border-box; transition: all 0.2s;" %>
      </div>

      <div style="text-align: center; margin-bottom: 18px;">
        <%= f.submit "Signup", 
              style: "width: 100%; padding: 12px; background: linear-gradient(to right, #17a2b8, #117a8b); color: #fff; border: none; border-radius: 10px; font-weight: bold; cursor: pointer; font-size: 15px; transition: all 0.3s ease;", 
              onmouseover: "this.style.background='linear-gradient(to right, #117a8b, #0d5c6e)'; this.style.transform='scale(1.03)';",
              onmouseout: "this.style.background='linear-gradient(to right, #17a2b8, #117a8b)'; this.style.transform='scale(1)';" %>
      </div>

      <div style="text-align: center; margin-top: 10px; font-size: 14px; color: #6c757d;">
        Already have an account? 
        <%= link_to "Login", student_login_path, style: "color: #007bff; font-weight: bold; text-decoration: none;",
              onmouseover: "this.style.textDecoration='underline';", onmouseout: "this.style.textDecoration='none';" %>
      </div>

      <div style="text-align: center; margin-top: 10px;">
        <%= link_to "â¬… Back to Home Page", root_path, style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
              onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
              onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
      </div>

    <% end %>

  </div>
</div>

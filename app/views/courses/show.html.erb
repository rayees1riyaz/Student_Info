<% if @course %>
  <div style="max-width: 750px; margin: 60px auto; font-family: 'Arial', sans-serif; display: flex; flex-direction: column; gap: 30px;">
    <div style="background: linear-gradient(145deg, #fefefe, #e0f7fa); padding: 35px; border-radius: 25px; box-shadow: 0 18px 45px rgba(0,0,0,0.08); transition: all 0.3s ease;">
      
      <h2 style="font-size: 30px; background: linear-gradient(90deg, #00acc1, #00e5ff); -webkit-background-clip: text; color: transparent; margin-bottom: 25px; border-bottom: 3px solid #00acc1; padding-bottom: 12px; letter-spacing: 1px;">📚 Course Details</h2>
      
      <p style="margin-bottom: 18px; font-size: 18px; color: #333; line-height: 1.6;">
        <strong style="color:#00acc1;">Course Name:</strong> <span style="color:#222;"><%= @course.name %></span>
      </p>
      
      <p style="margin-bottom: 18px; font-size: 18px; color: #333; line-height: 1.6;">
        <strong style="color:#00acc1;">Duration:</strong> <span style="color:#222;"><%= @course.duration %></span>
      </p>
  <p style="margin-bottom: 0; font-size: 18px; color: #333; line-height: 1.6;">
  <strong style="color:#00acc1;">Subjects:</strong>
</p>
<ul style="color:#222; margin-top: 5px; padding-left: 20px;">
  <% @course.subject.split(",").each do |subject| %>
    <li><%= subject.strip %></li>
  <% end %>
</ul>
    </div>

    <
    <div style="text-align: center; margin-top: 15px;">
  <% path = current_user ? index_path : root_path %>
  <%= link_to "⬅ Back to Home Page", path,
        style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
        onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
        onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
</div>

  </div>
</div>


  </div>
<% else %>
  <p style="text-align: center; font-size: 18px; color: #ff6f61; margin-top: 50px;">⚠️ No Course found for this student.</p>
<% end %>

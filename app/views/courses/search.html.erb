<div style="min-height: 100vh; display: flex; justify-content: center; align-items: center;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2); padding: 20px;">

  <div style="width: 100%; max-width: 500px; background: #ffffff; border-radius: 15px;
              padding: 30px 25px; box-shadow: 0 8px 25px rgba(0,0,0,0.12); transition: all 0.3s ease;">

    <h1 style="font-family: Arial, sans-serif; color: #343a40; text-align: center; 
               margin-bottom: 25px; text-shadow: 1px 1px #ccc; font-size: 22px;">
      See Course Details
    </h1>

    <%= form_with url: courses_search_by_id_path, method: :post, local: true do |f| %>

      <div style="margin-bottom: 20px;">
        <%= f.label :course_id, "Select Your Course To See Course Details", 
              style: "font-weight: 600; display: block; margin-bottom: 8px; color: #495057;" %>
        <%= f.collection_select :course_id, Course.all, :id, :name, { prompt: "Choose a course" }, 
              { style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 8px; font-size: 14px; outline: none; box-sizing: border-box;" } %>
      </div>

      <div style="text-align: center; margin-bottom: 20px;">
        <%= f.submit "Search", 
              style: "width: 100%; padding: 12px; background: linear-gradient(to right, #17a2b8, #117a8b); color: #fff; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; font-size: 15px; transition: all 0.3s ease;",
              onmouseover: "this.style.background='linear-gradient(to right, #117a8b, #0d5c63)'; this.style.transform='scale(1.03)';",
              onmouseout: "this.style.background='linear-gradient(to right, #17a2b8, #117a8b)'; this.style.transform='scale(1)';" %>
      </div>

    <% end %>

   <div style="text-align: center; margin-top: 15px;">
  <% path = current_user ? index_path : root_path %>
  <%= link_to "â¬… Back to Home Page", path,
        style: "display: inline-block; padding: 10px 18px; background-color: #6c757d; color: #fff; text-decoration: none; border-radius: 10px; font-weight: bold; transition: all 0.3s ease;",
        onmouseover: "this.style.backgroundColor='#5a6268'; this.style.transform='scale(1.03)';",
        onmouseout: "this.style.backgroundColor='#6c757d'; this.style.transform='scale(1)';" %>
</div>

  </div>
</div>


  </div>
</div>
